<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 상단 공백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- 사용자 정보 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 왼쪽 공백 -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <!-- 프로필 이미지 -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ivProfileImage"
            android:scaleType="centerCrop"
            android:background="@drawable/background_my_page_circle"
            android:contentDescription="@string/profile_image" />

        <!-- 사용자 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvKakaoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KakaoTalk User"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvKakaoEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kakao@example.com"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- 오른쪽 공백 -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />
    </LinearLayout>

    <!-- 로그아웃 버튼 -->
    <Button
        android:id="@+id/btnKakaoLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccent" />

    <!-- 회원 탈퇴 버튼 -->
    <Button
        android:id="@+id/btnKakaoWithdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccent" />

</LinearLayout>
